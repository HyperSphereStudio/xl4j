<!-- If you want to make things really noisy, use this file like -Dlogback.configurationFile=com/opengamma/util/debug-logback.xml -->
<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
      <layout class="ch.qos.logback.classic.PatternLayout">
        <Pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</Pattern>
      </layout>
    </encoder>
  </appender>
  
  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>c:\excel4j-java.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
      <fileNamePattern>excel4j-java.%i.log.gz</fileNamePattern>
      <minIndex>1</minIndex>
      <maxIndex>9</maxIndex>
    </rollingPolicy>
    <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
      <maxFileSize>50MB</maxFileSize>
    </triggeringPolicy>
    <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
      <layout class="ch.qos.logback.classic.PatternLayout">
        <Pattern>%date [%thread] %-5level %logger{36} - %msg%n</Pattern>
      </layout>
    </encoder>
  </appender>
  
  <!--appender name="BRIDGE" class="com.opengamma.util.log.LogbackBridgeAppender" /-->
   
  <root level="info">
    <!-- appender-ref ref="FILE" /-->
    <appender-ref ref="FILE" />
  </root>

  <logger name="com.mcleodmoores.excel4j.heap" level="INFO"/>

  <!-- <appender name="BRIDGE" class="com.opengamma.util.log.LogbackBridgeAppender" /> -->

  <!-- <root level="debug"> -->
  <!--   <appender-ref ref="STDOUT" /> -->
  <!--   <appender-ref ref="BRIDGE" /> -->
  <!-- </root> -->
  
</configuration>